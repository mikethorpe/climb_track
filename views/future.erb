<h1>future sessions</h1>

<a href="/workouts/create"><button type="button" name="create">create workout</button></a>

<table class="overview">
    <tr>
        <th>name</th>
        <th>target date</th>
        <th></th>
        <th></th>

    </tr>
    
<%for workout in @future_workouts%>
    <tr>
        <td><%=workout.name%></td>
        <td> <%=workout.date%></td>
        <td><a href="/workouts/<%=workout.id%>"><button type="button" name="delete">view details</button></a></td>
        <%if Date.today().to_s == workout.date%>
            <td><a href="/workouts/<%=workout.id%>/run"><button type="button" name="run">run</button></a></td>
        <%end%>
    </tr>
<%end%>

</table>