<form class="create-buttons"action="/workouts/create" method="get">
    <input type="submit" value="Create workout">    
</form>

<table class="overview">
    <tr>
        <th>Name</th>
        <th>Target date</th>
        <th></th>
        <th></th>
    </tr>
    
<%for workout in @future_workouts%>

    <tr>
        <td><%=workout.name%></td>
        <td> <%=workout.date%></td>
        <td><form action="/workouts/<%=workout.id%>" method="get">
                <input type="submit" value="View details">    
            </form>
        </td>
        <%= "<td> </td>" if Date.today().to_s != workout.date%>
        
        <%if Date.today().to_s == workout.date%>
            <td>
                <form class="run-buttons" action="/workouts/<%=workout.id%>/run" method="get">
                    <input type="submit" value="Run">    
                </form>            
        <%end%>
    </tr>
<%end%>

</table>