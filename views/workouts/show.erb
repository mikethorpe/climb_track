<h1> workout details </h1>
<p>workout: <%=@workout.name%>
<p>target date: <%=@workout.date%></p>

<form class="" action="/workouts/<%=@workout.id%>/edit" method="get">
  <input type="submit" value="edit workout">
</form>

<form class="" action="/workouts/<%=@workout.id %>/delete" method="get">
  <input type="submit" value="delete workout">
</form>

<table>        
    <tr>
        <th>exercise</th>
        <th>sets</th>
        <th>reps</th>
    </tr>  

    <%for exercise in @exercises%>
        <tr>
            <td><div><%=exercise.name%></div><div class="notes"><%=exercise.notes%></div> </td>
            <td><%=exercise.reps%></td>
            <td><%=exercise.sets%></td>
        </tr>
    <%end%>

</table>

