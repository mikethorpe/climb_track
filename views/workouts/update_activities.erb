<h1> Add / remove some activities to your workout </h1>

<form class="" action="/workouts/<%=@workout.id%>/add_activity" method="post">
    <label for="exercise">Add exercise: </label>
    <select id="exercise-id" name="exercise_id">
        <%for exercise in @exercises%>
            <option value="<%=exercise.id%>"><%=exercise.name%></option>
        <%end%>
    </select>  
    <input type="submit" value="Add exercise">

</form>

<hr>


<%for activity in @workout.activities()%>
    
    <ul>
        <li>Name: <%=activity.exercise.name %> </li> 
        <li>Reps: <%=activity.exercise.reps%> </li>
        <li>Sets: <%=activity.exercise.sets%> </li>
        <li>Notes: <%=activity.exercise.notes%> </li>

    </ul>
    
    <form class="" action="/workouts/<%=@workout.id%>/delete_activity" method="post">
        <input type="hidden" name="activity_id" value="<%=activity.id%>"/>
        <input type="submit" value="Remove exercise">
    </form>
    
    <hr>

<%end%>

<a href="/workouts/<%=@workout.id%>"><button type="button" name="finish">View workout</button></a>
